#!/usr/bin/env node

const app = require('../app');
const debug = require('debug')('impress:server');
const http = require('http');
const schedule = require('node-schedule');
const portalUpdateRecord = require('../scripts/portal_update_record.js');
const portalUpdateLink = require('../scripts/portal_update_link.js');
const subdomainUpdateRecord = require('../scripts/subdomain_update_record.js');
const calCulateSiteData = require('../scripts/calculate_site_data.js');

// 创建服务器并挂载到 3005 端口
const port = normalizePort(process.env.PORT || '3005');
app.set('port', port);

const server = http.createServer(app);

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);


// 设置后台任务
// 更新门户网站新闻频道百度收录数
const scheduleTime1 = '0 * * * *';
schedule.scheduleJob(scheduleTime1, function () {
  portalUpdateRecord();
});

// 更新门户网站新闻频道首页链接数
const scheduleTime2 = '5 * * * *';
schedule.scheduleJob(scheduleTime2, function () {
  portalUpdateLink();
});

// 更新子域名百度收录数
subdomainUpdateRecord();

// 生成子域名数据表
const scheduleTime3 = '*/15 * * * *';
schedule.scheduleJob(scheduleTime3, function () {
  calCulateSiteData();
});

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      process.exit(1);
      break;
    case 'EADDRINUSE':
      process.exit(1);
      break;
    default:
      throw error;
  }
}


function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log('Listening on port 3005.');
}
